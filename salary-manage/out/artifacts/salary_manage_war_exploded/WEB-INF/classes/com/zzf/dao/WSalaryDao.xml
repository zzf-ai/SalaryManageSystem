	<update id="updateWSalary" parameterType="Integer">
		update WSalary
		<set>
			isgrant='是',
			grantdate=CURDATE()
		</set>
		where wsid=#{wsid};
	</update>
	<update id="updateWSalaryAll">
		update WSalary
		<set>
			<!--<if test="'0'==isgrant">
				isgrant='是',
			</if>-->
			isgrant='是',
			<!--模拟后一天-->
			grantdate=date_sub(curdate(),interval -1 day)
		</set>
		where isgrant='否';
	</update>

	<!--清空-->
	<update id="truncate">
    	truncate table wsalary;
