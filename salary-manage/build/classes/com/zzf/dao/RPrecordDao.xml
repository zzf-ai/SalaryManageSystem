<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace表示命名空间 -->
<mapper namespace="com.zzf.dao.RPrecordDao">
	<!-- 按工号查询记录信息 -->
	<select id="selectRPrecordByWno" parameterType="String"
		resultType="RPrecord">
		select * from rprecord
		<where>
			<if test="wno!=null and wno!=''">
				and wno=#{wno};
			</if>
		</where>
	</select>
	<!-- 模糊查询记录信息 -->
	<select id="selectRPrecordByWname" parameterType="String"
		resultType="RPrecord">
		<bind name="wname" value="'%'+wname+'%'" />
		select * from rprecord
		<where>
			<if test="wname!=null and wname!=''">
				and wname like #{wname}
			</if>
		</where>
	</select>
	<!-- 所有记录信息 -->
	<select id="selectRPrecord" resultType="RPrecord">
		select * from rprecord;
	</select>
	<!-- 插入 -->
	<insert id="insertRPrecord" parameterType="RPrecord">
		insert into
		RPrecord(rpno,wno,wname,wjob,rewardOrpunish)
		values(#{rpno},#{wno},#{wname},#{wjob},#{rewardOrpunish});
	</insert>
	<!-- 删除 -->
	<delete id="deleteRPrecordByWno" parameterType="String">
		delete from
		RPrecord where rpno=#{rpno};
	</delete>
	<!-- 更新 -->
	<update id="updateRPrecord" parameterType="RPrecord">
		update rprecord
		<set>
			<if test="wno!=null and wno!=''">
				wno=#{wno},
			</if>
			<if test="wname!=null and wname!=''">
				wname=#{wname},
			</if>
			<if test="wjob!=null and wjob!=''">
				wjob=#{wjob},
			</if>
			<if test="rewardOrpunish!=null and rewardOrpunish!=''">
				rewardOrpunish=#{rewardOrpunish},
			</if>
		</set>
		where rpno=#{rpno};
	</update>
</mapper>